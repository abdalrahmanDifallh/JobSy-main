@model IEnumerable<JopSy.ViewModel.CreateJobViewModel>
@using JopSy.Data.Enum

@{
    ViewData["Title"] = "List of Jobs";
}

<!-- Header Section -->
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">List of Jobs</h2>
        <a asp-action="Create" class="btn btn-primary btn-lg">
            <i class="fas fa-plus-circle me-2"></i>Create New Job
        </a>
    </div>

    <!-- Jobs Grid -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title fw-bold text-primary">@Html.DisplayFor(modelItem => item.Title)</h5>
                        <p class="card-text text-muted">@Html.DisplayFor(modelItem => item.Description)</p>
                        <div class="mb-3">
                            <span class="badge bg-info text-dark me-2">@Html.DisplayFor(modelItem => item.ContractType)</span>
                            <span class="badge bg-secondary">@Html.DisplayFor(modelItem => item.WorkMode)</span>
                        </div>
                        <p class="card-text">
                            <small class="text-muted">
                                <i class="fas fa-calendar-alt me-2"></i>Posted on: @item.PostedDate.ToString("dd/MM/yyyy")
                            </small>
                        </p>
                        <div class="card-text">
                            <strong>Address:</strong>
                            @if (item.Address != null)
                            {
                                <div>
                                    <span><i class="fas fa-city me-2"></i>City: @(item.Address.City ?? "Not specified")</span><br />
                                    <span><i class="fas fa-map-marker-alt me-2"></i>Area: @(item.Address.Area ?? "Not specified")</span><br />
                                    <span><i class="fas fa-road me-2"></i>Street: @(item.Address.Street ?? "Not specified")</span>
                                </div>
                            }
                            else
                            {
                                <span>Not specified</span>
                            }
                        </div>
                    </div>
                    <div class="card-footer bg-white border-top-0">
                        <div class="d-flex justify-content-between">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">
                                <i class="fas fa-edit me-1"></i>Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                <i class="fas fa-info-circlephy me-1"></i>Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash-alt me-1"></i>Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- CSS Styles -->
<style>
    .card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

    .card-title {
        font-size: 1.25rem;
    }

    .card-text {
        font-size: 0.9rem;
    }

    .badge {
        font-size: 0.85rem;
        padding: 0.5em 0.75em;
    }

    .btn-sm {
        font-size: 0.85rem;
    }

    .container {
        max-width: 1200px;
    }
</style>

<!-- Include Font Awesome for Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}