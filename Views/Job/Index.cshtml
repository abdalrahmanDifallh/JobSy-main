@using JopSy.Models
@model IEnumerable<JopSy.Models.Job>

@{
    ViewData["Title"] = "Job Listings";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg border-0" style="border-radius: 1rem; overflow: hidden;">
                <div class="card-header text-center py-4" style="background: linear-gradient(135deg, #1e3a8a, #3b82f6);">
                    <h4 class="fw-bold text-white mb-0"><i class="fas fa-briefcase me-2"></i>Job Listings</h4>
                </div>
                <div class="card-body p-4">
                    <div class="d-flex justify-content-end mb-3">
                        <a asp-action="Create" class="btn btn-primary rounded-pill px-4" style="background: linear-gradient(135deg, #1e3a8a, #3b82f6); border: none;">
                            <i class="fas fa-plus me-1"></i>Create New Job
                        </a>
                    </div>
                    @if (!Model.Any())
                    {
                        <div class="alert alert-info text-center">
                            No jobs available. Create a new job to get started!
                        </div>
                    }
                    else
                    {
                        <table class="table table-dark table-hover">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Company</th>
                                    <th>Salary</th>
                                    <th>Work Type</th>
                                    <th>Posted Date</th>
                                    <th>Address</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var job in Model)
                                {
                                    <tr>
                                        <td>@job.Title</td>
                                        <td>@job.CompanyName</td>
                                        <td>@job.Salary.ToString("C")</td>
                                        <td>@job.WorkType</td>
                                        <td>@job.PostedDate.ToString("d MMM yyyy")</td>
                                        <td>@(job.Address != null ? $"{job.Address.City} - {job.Address.Area}" : "N/A")</td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@job.Id" class="btn btn-sm btn-info rounded-pill">Details</a>
                                            <a asp-action="Edit" asp-route-id="@job.Id" class="btn btn-sm btn-warning rounded-pill">Edit</a>
                                            <a asp-action="Delete" asp-route-id="@job.Id" class="btn btn-sm btn-danger rounded-pill">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .table-dark {
        background-color: #34495e;
        color: #e9ecef;
    }

        .table-dark th, .table-dark td {
            border-color: #4b5e74;
        }

        .table-dark .btn {
            padding: 0.25rem 0.75rem;
        }

    .alert-info {
        background-color: #3b82f6;
        color: #e9ecef;
        border-color: #1e40af;
    }
</style>