@using Microsoft.AspNetCore.Mvc.Rendering
@model JopSy.ViewModel.CreatJobViewModel

@{
    ViewData["Title"] = "Create Job";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0" style="border-radius: 1rem; overflow: hidden;">
                <div class="card-header text-center py-4" style="background: linear-gradient(135deg, #1e3a8a, #3b82f6);">
                    <h4 class="fw-bold text-white mb-0"><i class="fas fa-briefcase me-2"></i>Post a New Job</h4>
                </div>
                <div class="card-body p-4">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>Error!</strong> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <strong>Success!</strong> @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <form asp-action="Create" method="post" class="needs-validation" novalidate>
                        <input asp-for="Id" type="hidden" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-medium"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-heading"></i></span>
                                <input asp-for="Title" class="form-control" placeholder="Enter job title" required />
                            </div>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CompanyName" class="form-label fw-medium"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-building"></i></span>
                                <input asp-for="CompanyName" class="form-control" placeholder="Enter company name" required />
                            </div>
                            <span asp-validation-for="CompanyName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Salary" class="form-label fw-medium"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-dollar-sign"></i></span>
                                <input asp-for="Salary" class="form-control" placeholder="Enter salary (e.g., 50000)" type="number" required />
                            </div>
                            <span asp-validation-for="Salary" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="WorkType" class="form-label fw-medium"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-briefcase"></i></span>
                                <select asp-for="WorkType" class="form-control" asp-items="Html.GetEnumSelectList<JopSy.Data.Enum.WorkType>()" required>
                                    <option value="">-- Select Work Type --</option>
                                </select>
                            </div>
                            <span asp-validation-for="WorkType" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-medium"></label>
                            <textarea asp-for="Description" class="form-control" rows="5" placeholder="Describe the job role and requirements" required></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AddressId" class="form-label fw-medium"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                                <select asp-for="AddressId" class="form-control" asp-items="@(Model?.AddressOptions ?? new List<SelectListItem>())" required>
                                    <option value="">-- Select Address --</option>
                                </select>
                            </div>
                            @if (Model?.AddressOptions == null || !Model.AddressOptions.Any())
                            {
                                <small class="text-warning">No addresses available. Please add a city and area.</small>
                            }
                            <span asp-validation-for="AddressId" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="PostedDate" class="form-label fw-medium"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                <input asp-for="PostedDate" class="form-control" type="date" required />
                            </div>
                            <span asp-validation-for="PostedDate" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                                <i class="fas fa-times me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary rounded-pill px-4" style="background: linear-gradient(135deg, #1e3a8a, #3b82f6); border: none;">
                                <i class="fas fa-save me-1"></i>Post Job
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        background-color: #2c3e50;
        color: #e9ecef;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.3);
        }

    .form-control, .input-group-text {
        border-radius: 0.5rem;
        background-color: #34495e;
        color: #e9ecef;
        border-color: #4b5e74;
    }

        .form-control:focus {
            border-color: #3b82f6;
            box-shadow: 0 0 0 0.25rem rgba(59, 130, 246, 0.25);
        }

    .form-label {
        color: #adb5bd;
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #1e40af, #2563eb) !important;
    }

    .btn-outline-secondary {
        border-color: #4b5e74;
        color: #adb5bd;
    }

        .btn-outline-secondary:hover {
            background-color: #34495e;
            color: #e9ecef;
        }

    .alert-danger, .alert-success {
        border-radius: 0.5rem;
    }

    .text-danger {
        color: #f87171 !important;
    }

    .text-warning {
        color: #facc15 !important;
    }

    @@media (max-width: 576px) {
        .card-body {
            padding: 1.5rem !important;
        }

        .btn {
            padding: 0.5rem 1rem !important;
            font-size: 0.9rem !important;
        }
    }
</style>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
    <script>
        document.querySelectorAll('.form-control').forEach(input => {
            input.addEventListener('input', () => {
                if (input.checkValidity()) {
                    input.classList.add('is-valid');
                    input.classList.remove('is-invalid');
                } else {
                    input.classList.add('is-invalid');
                    input.classList.remove('is-valid');
                }
            });
        });
    </script>
}